<h3>Busqueda de Preguntas</h3>
<br>
<form action="quizes" method="get" >
  <input type="text" name="search" placeholder="Introduzca palabras" class="caja-texto">
  <input type="submit" value="Buscar" class="boton boton-buscar" >	
</form>
<br>
<table>
  <% var i; for (i=0; i < quizes.length; i++) { %>
  <tr>
    <td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
    <%if(session.user){%>
    <td><a href="/quizes/<%= quizes[i].id %>/edit"><button type="button" class="boton boton-edit">Editar</button></a></td>
    <td>
      <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
        <button type="submit" onclick="return confirm('Borrar: <%=quizes[i].pregunta%>');" class="boton boton-delete">Eliminar
        </button>
      </form>
    </td>
    <%}%>
  </tr>
	<% } %>
</table>
<br>
 <%if(session.user){%>
<a href="/quizes/new"><button type="button" class="boton boton-crear">Crear Pregunta</button></a>
<%}%>